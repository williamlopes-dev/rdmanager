<p id="notice"><%= notice %></p>

<h1>Product Prices</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Currency</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_prices.each do |product_price| %>
      <tr>
        <td><%= product_price.product.full_name %></td>
        <td><%= product_price.currency.name %></td>
        <td><%= product_price.price %></td>
        <td><%= link_to 'Show', product_price %></td>
        <td><%= link_to 'Edit', edit_product_price_path(product_price) %></td>
        <td><%= link_to 'Destroy', product_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Price', new_product_price_path %>
