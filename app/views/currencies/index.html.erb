<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Currencies</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @currencies.each do |currency| %>
      <tr>
        <td><%= currency.name %></td>
        <td>
          <%= link_to 'Show', currency_path(currency), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Edit', edit_currency_path(currency), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Destroy', currency, method: :delete, data:{ confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Currency', new_currency_path, :class => 'btn btn-primary' %>
<%= link_to 'Back', root_path, :class => 'btn btn-link' %>
