<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.company.full_name %></td>
        <td><%= link_to 'Show', company_product_path(@company, product) %></td>
        <td><%= link_to 'Edit', edit_company_product_path(@company, product) %></td>
        <td><%= link_to 'Destroy', [@company, product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_company_product_path(@company) %> |
<%= link_to 'Back', company_path(@company) %>
