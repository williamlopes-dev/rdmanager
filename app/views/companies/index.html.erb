<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Companies</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Cnpj</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.cnpj %></td>
        <td><%= company.name %></td>
        <td>
          <%= link_to 'Show', company, :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Edit', edit_company_path(company), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, :class => 'btn btn-primary' %>
<%= link_to 'Back', root_path, :class => 'btn btn-link' %>
